<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <%= turbo_stream_from "lists" %>
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to 'Create a movie list', "#", class: 'btn btn-flat', data: { toggle: "modal", target: "#newListModal" } %>
  </div>
    <div class="row">
      <% @lists.each do |list| %>
        <div class="co-12 colsm-6 col-md-4">
          <%= link_to list_path(list), class:'text-decoration-none' do %>
            <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('list_background.jpg') %>)">
              <%= list.name %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
 </div>

<!-- Modal -->
<div class="modal fade" id="newListModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= render partial: "lists/form", locals: { list: List.new } %>
    </div>
  </div>
</div>


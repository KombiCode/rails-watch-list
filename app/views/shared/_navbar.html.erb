<div class="navbar navbar-expand-sm navbar-light navbar-lewagon px-3">
  <%= image_tag "popcorn.png", alt: "alttext", class: "logo" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "My lists", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item active">
        <%= link_to "New list", "#", class: "nav-link", data: { toggle: "modal", target: "#newListModal" } %>
      </li>
    </ul>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="newListModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= render partial: "lists/form", locals: { list: List.new } %>
    </div>
  </div>
</div>